sudo apt-get install samba samba-common-bin -y
sudo mkdir -m 1777 /share

sudo nano /etc/samba/smb.conf

[share]
Comment = Pi shared folder
Path = /share
Browseable = yes
Writeable = Yes
only guest = no
create mask = 0777
directory mask = 0777
Public = yes
Guest ok = yes
force user = pi
force group = pi

sudo smbpasswd -a pi
